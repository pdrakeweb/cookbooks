#
# Generated by Chef
#
#   - Graylog2 configuration file

# On which port (UDP) should we listen for Syslog messages? (Standard: 514)
syslog_listen_port = <%= node[:graylog2][:syslog_port] %>
syslog_protocol = <%= node[:graylog2][:syslog_protocol] %>

# MongoDB Configuration
mongodb_useauth = false
mongodb_user = <%= node[:graylog2][:db_user] %>
mongodb_password = "<%= node[:graylog2][:db_pass] %>"
mongodb_host = <%= node[:graylog2][:db_host] %>
mongodb_database = <%= node[:graylog2][:db_name] %>
mongodb_port = <%= node[:graylog2][:db_port] %>
mongodb_max_connections = 500

# The (pre-allocated) size of the messages collection in bytes.. (All your syslog and GELF messages are stored here. Standard: 50000000 [~50MB])
messages_collection_size = <%= node[:graylog2][:collectionsize] %>

# Graylog Extended Log Format (GELF)
use_gelf = <%= node[:graylog2][:gelf_enable] %>
gelf_listen_port = <%= node[:graylog2][:gelf_port] %>
